                                        <div class="custom__radio__wrapper">
                                            <input type="radio" checked style="display: none !important"
                                                name="paymentMethod" id="" />
                                            <div class="custom__radio"></div>
                                        </div>
                                        <div class="flex-between v-center flex-full">
                                            <p class="body-medium fw-normal">Cash</p>
                                        </div>
                                    </div>
                                    <!-- single Payment method end -->
                                </div>
                            </div>
                            <div class="flex flex-between width-full mt20">
                                <button class="primary-text-btn hover-fade">
                                    <i class="fal fa-chevron-left"></i>
                                    Return to cart
                                </button>
                                <button class="btn buy-now-btn primary-fill-btn hover-fade rounded-8"
                                    style="max-width: unset; width: fit-content; padding-block: 20px">
                                    Buy now
                                    <i class="fal fa-chevron-right"></i>
                                </button>
                            </div>
                        </div>
                    </div>
