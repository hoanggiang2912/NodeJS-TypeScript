<main class="main login__main third-font header__next flex-center p60">
    <form id="forgotForm" action="#" class="form form--forgot form--user__info flex-column g20">
        <div class="tac">
            <h2 class="display-small ttu fw-bold ttc">Forgot password</h2>
            <p class="body-small fw-normal mt12 mb12">We will send you an email contain reset password link.</p>
        </div>
        <span class="form__message form__error__message width-full primary-text alert-text body-medium fw-smb">
            {{#if sendMail}}
                <span class="success-text body-medium fw-smb p12"
                    style="background: rgba(32, 227, 178, .2); color: #20E3B2; border: 1px solid #20E3B2">Sending email
                    successfully!</span>
            {{/if}}
        </span>
        <div class="form__group">
            <input type="text" class="form__input email__input" placeholder="Email">
            <span class="form__group__title fw-bold label-medium">Email</span>
            <span class="form__message"></span>
        </div>
        <div class="form__group flex g30">
            <button class="send-btn btn form__btn primary-fill-btn hover auto-set-width fw-bold">Send Email</button>
            <a href="/login" class="flex-center btn form__btn primary-text-btn hover auto-set-width fw-normal text">Move to Log In</a>
        </div>
    </form>
</main>

<script type="module" src="/js/forgot.js"></script>