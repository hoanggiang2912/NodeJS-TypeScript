                                        </div>
                                    </div>
                                    <!-- single shipping method end -->
                                </div>
                            </div>
                            <div class="mt20 payment__methods radio__boxes">
                                <h4 class="title-medium fw-smb mt30">Payment methods</h4>
                                <div class="payment__method__holder radio__boxes__holder mt20 width-full">
                                    <!-- single Payment method start -->
                                    <div class="payment__method custom__radio__parent checked flex v-center width-full g12 p20 border"
